{% extends 'base.html.twig' %}

{% block title %}Medicine index{% endblock %}

{% block body %}
    <h1>Medicine index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Price</th>
                <th>Expiry_date</th>
                <th>Available_quantity</th>
                <th>Dosage_mg</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medicine in medicines %}
            <tr>
                <td>{{ medicine.id }}</td>
                <td>{{ medicine.name }}</td>
                <td>{{ medicine.price }}</td>
                <td>{{ medicine.expiryDate ? medicine.expiryDate|date('Y-m-d') : '' }}</td>
                <td>{{ medicine.availableQuantity }}</td>
                <td>{{ medicine.dosageMg }}</td>
                <td>
                    <a href="{{ path('app_medicine_show', {'id': medicine.id}) }}">show</a>
                    <a href="{{ path('app_medicine_edit', {'id': medicine.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_medicine_new') }}">Create new</a>
{% endblock %}
