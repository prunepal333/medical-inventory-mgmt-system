{% extends 'base.html.twig' %}

{% block title %}Medicine{% endblock %}

{% block body %}
    <h1>Medicine</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medicine.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ medicine.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ medicine.price }}</td>
            </tr>
            <tr>
                <th>Expiry_date</th>
                <td>{{ medicine.expiryDate ? medicine.expiryDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Available_quantity</th>
                <td>{{ medicine.availableQuantity }}</td>
            </tr>
            <tr>
                <th>Dosage_mg</th>
                <td>{{ medicine.dosageMg }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_medicine_index') }}">back to list</a>

    <a href="{{ path('app_medicine_edit', {'id': medicine.id}) }}">edit</a>

    {{ include('medicine/_delete_form.html.twig') }}
{% endblock %}
